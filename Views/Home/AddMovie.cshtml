@{
    ViewData["Title"] = "Add Movie";
}

@model MovieForm
<h1>Add a movie to my never-ending collection!</h1>

<!--Form to add movies-->
<div>
    <form method="post">
        <label asp-for="CategoryID">Category:</label>
        <select asp-for="CategoryID" required>
            <option value="">Select a category</option>
            <!--Razor for options-->
            @foreach (Category c in ViewBag.Category)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select> <br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" required /> <br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" type="number" required /> <br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" required /> <br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select> <br />

        <label asp-for="Edited">Edited:</label>
        <input type="checkbox" asp-for="Edited" id="Yes" value="Yes"/>
        <label for="Yes">Yes</label>
        <input type="checkbox" asp-for="Edited" id="No" value="No"/>
        <label for="No">No</label> <br />

        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" /> <br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" maxlength="25" /> <br /> <!--Limit notes to 25 characters-->

        <button type="submit">Add movie</button>
    </form>
</div>
